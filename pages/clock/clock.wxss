page {
  background-color: #000;
  width: 100%;
  height: 100%;
  margin: 0; 
  padding: 0;
}

.clock {
  text-align:center;
  position: relative;
  top: 50%;
  transform: translateY(-50%);
}

.flip {
  margin: 0 auto;
  vertical-align: middle;
  width: 300rpx;
  height: 120rpx;
}

.slip {
  height: 40rpx;
  background-color: #000;
}

.icon {
  transform:rotate(90deg);
  font-size: 50rpx;
  color: #ccc;
}

.flip-num {
   transform:rotate(90deg);
   font-size: 120rpx;
   color: #ccc;
}